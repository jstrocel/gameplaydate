<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to image_tag("GamePlayDate202x40.png", :border => 0), root_path, class:"brand" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Help", help_path %></li>
          <% if signed_in? %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Events <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "My Events", my_events_path %></li>
                <li><%= link_to "All Events", events_path %></li>
                <li><%= link_to "New Event", new_event_path %></li>
              </ul>
            </li>
            <li><%= link_to "Users", users_path %></li>
            <li><%= link_to "Games", games_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <%if current_user.friend_requests.count> 0%><span class= "friend_requests_number"><%=current_user.friend_requests.count%></span><b class="caret"><%end%></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li><%= link_to friend_requests_user_path(current_user) do%>
                     Friend Requests <%if current_user.friend_requests.count> 0%>
                     <span class= "friend_requests_number"><%=current_user.friend_requests.count%></span>
                     <%end%>
                  <%end%>
                  </li>
                <li><%= link_to "Beta Invites",  new_beta_invitation_path %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>