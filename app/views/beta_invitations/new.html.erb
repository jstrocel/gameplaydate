<% provide(:title, 'New Beta Invitation') %>

<%= form_for @beta_invitation do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <p>
    <%= f.label :recipient_email, "Friend's E-mail Address" %><br />
    <%= f.text_field :recipient_email %>
  </p>
  <p><%= f.submit "Invite!" %></p>
<% end %>


