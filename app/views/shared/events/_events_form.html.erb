

<%= form_for(@event) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>


  <p>
    <%= f.collection_select :game_id, @games, :id, :name, :prompt => "Select A Game"  %>
  </p>
  
  <%= f.fields_for :invites do |builder| %>
       <%= render 'shared/events/invite_fields', :f => builder %>
     <% end %>
 

  <div class="field">
    <%= f.label :fromtime %><br />
    <%=  f.datetime_select :fromtime %>
  </div>
  <div class="field">
    <%= f.label :totime %><br />
    <%= f.datetime_select :totime %>
  </div>
  <div class="actions">
    <%= f.submit "Create Event", class: "btn btn-large btn-primary" %>
  </div>

<% end %>
